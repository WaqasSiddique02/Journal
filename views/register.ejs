<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-4 my-lg-0 py-lg-5 d-none d-lg-block">
        <img src="../images/login-in pic.jpg" class="img-fluid" style="height: 500px; object-fit: cover;"
          alt="Books image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-5 offset-xl-1 my-lg-5 py-lg-5">
        <form>
          <!-- Email input -->
          <div data-mdb-input-init="" class="form-outline mb-4" data-mdb-input-initialized="true">
            <input type="email" id="reg-mail" class="form-control form-control-lg"
              placeholder="Enter a valid email address">
            <label class="form-label" for="reg-mail" style="margin-left: 0px;display: none;">Email address</label>
            <div class="form-notch">
              <div class="form-notch-leading" style="width: 9px;"></div>
              <div class="form-notch-middle" style="width: 88.8px;"></div>
              <div class="form-notch-trailing"></div>
            </div>
          </div>

          <!--Name-->
          <div data-mdb-input-init="" class="form-outline mb-4" data-mdb-input-initialized="true">
            <input type="text" id="reg-name" class="form-control form-control-lg"
              placeholder="Enter Your Name">
            <label class="form-label" for="reg-name" style="margin-left: 0px;display: none;">Name</label>
            <div class="form-notch">
              <div class="form-notch-leading" style="width: 9px;"></div>
              <div class="form-notch-middle" style="width: 88.8px;"></div>
              <div class="form-notch-trailing"></div>
            </div>
          </div>
          <!--Phone No-->
          <div data-mdb-input-init="" class="form-outline mb-4" data-mdb-input-initialized="true">
            <input type="number" id="reg-phone" class="form-control form-control-lg"
              placeholder="Enter a valid Phone Number">
            <label class="form-label" for="reg-phone" style="margin-left: 0px;display: none;">Phone No</label>
            <div class="form-notch">
              <div class="form-notch-leading" style="width: 9px;"></div>
              <div class="form-notch-middle" style="width: 88.8px;"></div>
              <div class="form-notch-trailing"></div>
            </div>
          </div>

          <!-- Password input -->
          <div data-mdb-input-init="" class="form-outline mb-3" data-mdb-input-initialized="true">
            <input type="password" id="reg-password" class="form-control form-control-lg" placeholder="Enter password">
            <label class="form-label" for="reg-password" style="margin-left: 0px;display: none;">Password</label>
            <div class="form-notch">
              <div class="form-notch-leading" style="width: 9px;"></div>
              <div class="form-notch-middle" style="width: 64px;"></div>
              <div class="form-notch-trailing"></div>
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-center">
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" data-mdb-button-init="" data-mdb-ripple-init="" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;" data-mdb-button-initialized="true">Register</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</body>
</html>