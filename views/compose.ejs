<%- include('header'); %>

  <div class="container">
    <h1>Compose</h1>
    <form method="post" action="/compose">
      <div class="mb-3 mt-5">
        <label for="title-input" class="form-label"></label>
        <input type="text" name="title" class="form-control" id="title-input" placeholder="Title" autocomplete="off"
          required>
      </div>
      <div class="mb-3">
        <label for="content-input" class="form-label"></label>
        <textarea type="text" rows="8" name="content" class="form-control" id="content-input" placeholder="Content"
          autocomplete="off" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  </form>

  <%- include('footer'); %>